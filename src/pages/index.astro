---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/ui/PageHeader.astro';
import CategoryGrid from '../components/categories/CategoryGrid.astro';
import EmptyState from '../components/ui/EmptyState.astro';
import { fetchCategories } from '../lib/queries/products/categories';

const categories = await fetchCategories();
---

<Layout title="Categories">
  <PageHeader
    title="Product Categories"
    description="Browse our collection of high-quality welding tables and accessories"
  />

  {categories.length > 0 ? (
    <CategoryGrid categories={categories} />
  ) : (
    <EmptyState
      title="No Categories Found"
      description="Check back later for new product categories."
      icon="folder"
    />
  )}
</Layout>
