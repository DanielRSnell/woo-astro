---
interface Props {
  name: string;
  description?: string;
  productCount: number;
}

const { name, description, productCount } = Astro.props;
---

<div class="flex flex-col gap-2">
  <h1 class="text-3xl font-bold tracking-tight">{name}</h1>
  {description && (
    <p class="text-muted-foreground max-w-3xl mr-auto">{description}</p>
  )}
</div>

<div class="flex items-center justify-between gap-4 border-b border-border pb-4">
  <div class="flex-1">
    <p class="text-sm text-muted-foreground">
      {productCount} {productCount === 1 ? 'product' : 'products'}
    </p>
  </div>
  <slot />
</div>
