---
interface Props {
  title: string;
  description: string;
  icon?: 'folder' | 'image' | 'cart';
}

const { title, description, icon = 'folder' } = Astro.props;

const icons = {
  folder: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>`,
  image: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>`,
  cart: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>`
};
---

<div class="text-center py-12">
  <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-muted">
    <svg 
      class="h-10 w-10 text-muted-foreground"
      xmlns="http://www.w3.org/2000/svg" 
      fill="none" 
      viewBox="0 0 24 24" 
      stroke="currentColor"
      set:html={icons[icon]}
    />
  </div>
  <h3 class="mt-4 text-lg font-semibold">{title}</h3>
  <p class="mt-2 text-sm text-muted-foreground">
    {description}
  </p>
</div>
