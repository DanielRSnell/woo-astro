---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<div class="mx-auto max-w-2xl text-center mb-16">
  <h1 class="text-4xl font-bold tracking-tight text-foreground sm:text-6xl font-display">
    {title}
  </h1>
  {description && (
    <p class="mt-6 text-lg leading-8 text-muted-foreground">
      {description}
    </p>
  )}
</div>
