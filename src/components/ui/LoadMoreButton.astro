---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<div class="mt-8 flex justify-center">
  <a 
    href={href}
    class="inline-flex items-center justify-center rounded-md bg-primary px-8 py-2.5 text-sm font-medium text-primary-foreground shadow transition-colors hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring"
  >
    Load More
  </a>
</div>
